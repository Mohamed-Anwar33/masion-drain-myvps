{
  "name": "maison-darin-backend",
  "version": "1.0.0",
  "description": "Backend API for Maison Darin luxury perfume website",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node tests/test-runner.js all",
    "test:unit": "node tests/test-runner.js unit",
    "test:integration": "node tests/test-runner.js integration",
    "test:coverage": "node tests/test-runner.js coverage",
    "test:watch": "node tests/test-runner.js watch",
    "test:specific": "node tests/test-runner.js specific",
    "test:ci": "jest --coverage --maxWorkers=2 --forceExit --detectOpenHandles",
    "postman:generate": "node scripts/generate-postman-collection.js",
    "docs:generate": "npm run postman:generate",
    "seed": "node scripts/seed.js",
    "seed:clear": "node scripts/seed.js --clear",
    "seed:users": "node scripts/createAdminUser.js",
    "setup:email": "node scripts/setup-email.js",
    "setup:paypal": "node scripts/initializePayPalSettings.js",
    "upload:images": "node scripts/uploadRealImages.js",
    "seed:products": "node scripts/seedProducts.js",
    "seed:content": "node scripts/seedContent.js",
    "migrate": "node scripts/migrate.js migrate",
    "migrate:rollback": "node scripts/migrate.js rollback",
    "migrate:status": "node scripts/migrate.js status",
    "docker:build": "docker build -t maison-darin-api .",
    "docker:run": "docker-compose up -d",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:stop": "docker-compose down",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:dev": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop maison-darin-api",
    "pm2:restart": "pm2 restart maison-darin-api",
    "pm2:logs": "pm2 logs maison-darin-api",
    "deploy": "node scripts/deploy.js",
    "deploy:docker": "node scripts/deploy.js --method docker",
    "deploy:seed": "node scripts/deploy.js --seed",
    "backup": "node scripts/backup.js create",
    "backup:db": "node scripts/backup.js create-db",
    "backup:restore": "node scripts/backup.js restore",
    "backup:list": "node scripts/backup.js list",
    "backup:cleanup": "node scripts/backup.js cleanup",
    "backup:verify": "node scripts/backup.js verify",
    "backup:test-restore": "node scripts/backup.js test-restore",
    "backup:scheduled": "node scripts/backup.js scheduled",
    "backup:status": "node scripts/backup.js status",
    "monitor": "node scripts/monitor.js check",
    "monitor:watch": "node scripts/monitor.js watch",
    "dashboard": "node scripts/dashboard.js live",
    "dashboard:snapshot": "node scripts/dashboard.js snapshot",
    "dashboard:report": "node scripts/dashboard.js report",
    "health-check": "node scripts/deployment-health-check.js",
    "health-check:json": "node scripts/deployment-health-check.js --json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "keywords": [
    "perfume",
    "luxury",
    "ecommerce",
    "api",
    "nodejs"
  ],
  "author": "Maison Darin",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "sharp": "^0.34.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

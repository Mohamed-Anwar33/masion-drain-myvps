# Staging Environment Configuration
NODE_ENV=staging
PORT=5001

# Database
MONGODB_URI=mongodb://localhost:27017/maison-darin-staging
DB_NAME=maison-darin-staging

# JWT Configuration
JWT_SECRET=staging-jwt-secret-key
JWT_REFRESH_SECRET=staging-refresh-secret-key
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-staging-cloud-name
CLOUDINARY_API_KEY=your-staging-api-key
CLOUDINARY_API_SECRET=your-staging-api-secret

# Frontend URL
FRONTEND_URL=https://staging.your-domain.com

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=staging@your-domain.com
SMTP_PASS=your-staging-app-password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=staging-redis-password

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/staging.log

# Monitoring
ENABLE_MONITORING=true
HEALTH_CHECK_INTERVAL=30000